{
  "editor.rulers": [80],
  "editor.tabSize": 2,

  "cSpell.enableFiletypes": ["gleam"],
  "cSpell.words": [
    "anonymization",
    "bigi",
    "byteorder",
    "charset",
    "charsets",
    "codepoint",
    "codepoints",
    "concat",
    "DICOM",
    "endianness",
    "dcmfx",
    "gleeunit",
    "ints",
    "println",
    "signedness",
    "simplifile",
    "submatches",
    "uids"
  ],

  "files.exclude": {
    "**/build/": true,
    "**/cache/": true,
    "**/dist/": true,
    "**/node_modules/": true,
    "**/target/": true
  },

  "debug.allowBreakpointsEverywhere": true
}

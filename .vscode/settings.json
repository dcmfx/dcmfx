{
  "editor.rulers": [80],
  "editor.tabSize": 2,

  "files.exclude": {
    "**/build/": true,
    "**/cache/": true,
    "**/dist/": true,
    "**/node_modules/": true,
    "**/target/": true
  },

  "rust-analyzer.linkedProjects": [
    "examples/dicom_anonymize/rust/Cargo.toml",
    "examples/dicom_json_read/rust/Cargo.toml",
    "examples/dicom_json_write/rust/Cargo.toml",
    "examples/dicom_read/rust/Cargo.toml",
    "examples/dicom_read_pixel_data/rust/Cargo.toml",
    "examples/dicom_stream/rust/Cargo.toml",
    "examples/dicom_write/rust/Cargo.toml",
    "src/rust/Cargo.toml"
  ],

  "cSpell.enabledFileTypes": { "gleam": true },
  "cSpell.words": [
    "anonymization",
    "bigi",
    "byteorder",
    "charset",
    "charsets",
    "codepoint",
    "codepoints",
    "concat",
    "deque",
    "dicom",
    "dicoms",
    "endianness",
    "dcmfx",
    "gleeunit",
    "hounsfield",
    "ints",
    "lut",
    "luts",
    "multiframe",
    "println",
    "rngs",
    "rposition",
    "seedable",
    "signedness",
    "simplifile",
    "submatches",
    "uids",
    "walkdir"
  ]
}
